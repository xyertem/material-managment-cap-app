{
  "name": "material-managment-cap-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "express": "^4",
    "@cap-js/hana": "^1",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "build:hana": "cds build --for hana",
    "deploy:cf": "mbt build && cf deploy mta_archives/material-managment-cap-app_1.0.0.mtar",
    "deploy:local": "cds deploy --to sqlite",
    "deploy:hana": "cds deploy --to hana",
    "srv:hybrid": "cds watch --profile hybrid --port 4004",
    "srv:local": "cds watch --port 4004",
    "undeploy": "cf undeploy material-managment-cap-app --delete-services --delete-service-keys --delete-service-brokers",
    "watch-productlist": "cds watch --open productlist/webapp/index.html?sap-ui-xx-viewCache=false",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana",
          "model": "srv",
          "deploy-format": "hdbtable"
        },
        "auth": "xsuaa"
      },
      "[hybrid]": {
        "db": {
          "kind": "hana",
          "model": "srv"
        },
        "auth": "xsuaa"
      },
      "[development]": {
        "db": {
          "kind": "sqlite",
          "model": "srv"
        }
      }
    }
  },
  "sapux": [
    "app/productlist"
  ]
}
